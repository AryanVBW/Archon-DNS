# Server Configuration
PORT=3000
DNS_PORT=53
NODE_ENV=production

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/archon-dns

# JWT Secret for Authentication (CHANGE THIS TO A SECURE RANDOM STRING)
JWT_SECRET=change_this_to_a_secure_random_string_in_production
JWT_EXPIRES_IN=1d

# Default Admin Credentials (CHANGE THESE)
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=change_this_to_a_secure_password

# DNS Configuration
DNS_UPSTREAM_PRIMARY=8.8.8.8
DNS_UPSTREAM_SECONDARY=1.1.1.1
DNS_FORWARDER_ENABLED=true
DNS_FORWARDER_TIMEOUT=5000
DNS_CACHE_ENABLED=true
DNS_CACHE_MAX_SIZE=10000
DNS_CACHE_TTL=300
DNS_QUERY_LOGGING=true
DNS_LOG_EXPIRY_DAYS=30

# Security Settings
CORS_ENABLED=false
CORS_ORIGIN=*
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Blocking Features
BLOCK_MALWARE=true
BLOCK_ADS=false
BLOCK_TRACKING=false
BLOCK_ADULT=false

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=/var/log/archon-dns
